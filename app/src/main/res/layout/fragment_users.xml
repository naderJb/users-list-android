<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".users.presentation.ui.fragment.UsersFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tbUsers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment.users.tab.height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="center" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpUsers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fillContent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbUsers" />


</androidx.constraintlayout.widget.ConstraintLayout>